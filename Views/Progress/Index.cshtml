@model PaginatedList<ProgressViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index">
    <div class="d-flex">
        <input class="form-control" placeholder="Search..." value="@ViewData["CurrentFilter"]" type="text"
            autocomplete="off" name="SearchString" />
        <select name="taskId" class="form-select" asp-items="ViewBag.TaskId">
            <option value="">-- Select Task --</option>
        </select>
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Progress_Percentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Note)
            </th>

            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Progress_Percentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Progress_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Progress_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Progress_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
