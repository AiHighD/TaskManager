@model IEnumerable<TasksManager.Data.Entities.Progress>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Progress_Percentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Task)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Progress_Percentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task.Task_Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Progress_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Progress_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Progress_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
