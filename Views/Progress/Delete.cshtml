@model TasksManager.ViewModels.ProgressViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text my-2">Delete</h1>
<h4 class="text-center text-danger">Are you sure you want to delete this?</h4>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this task?');"
                        class="">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Hidden field for Id -->
                        <input type="hidden" asp-for="Progress_Id" />

                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Progress Percentage</label>
                            <div class="form-control bg-white">
                                @Html.DisplayFor(model => model.Progress_Percentage)
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Note</label>
                            <div class="form-control bg-white">
                                @Html.DisplayFor(model => model.Note)
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Task</label>
                            <div class="form-control bg-white">
                                @Html.DisplayFor(model => model.Task)
                            </div>
                        </div>
                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger btn-lg me-2">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-success btn-lg">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
