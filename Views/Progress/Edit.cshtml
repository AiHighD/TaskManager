@model TasksManager.ViewModels.ProgressViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text">Edit Progress</h1>

<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Progress_Id" />
                        <div class="form-group">
                            <label asp-for="Progress_Percentage" class="form-label">Progress Percentage</label>
                            <input asp-for="Progress_Percentage" class="form-control" />
                            <span asp-validation-for="Progress_Percentage" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Note" class="form-label">Note</label>
                            <input asp-for="Note" class="form-control" />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TaskId" class="form-label"> Task</label>
                            <select asp-for="TaskId" class="form-control" asp-items="ViewBag.TaskId"></select>
                            <span asp-validation-for="TaskId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <input type="submit" value="Save" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-danger">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}
