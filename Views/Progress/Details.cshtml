@model TasksManager.ViewModels.ProgressViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center text">Progress Details</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card shadow-lg">
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Progress Percentage</label>
                        <div class="form-control bg-white">
                            @Html.DisplayFor(model => model.Progress_Percentage)
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Note</label>
                        <div class="form-control bg-white">
                            @Html.DisplayFor(model => model.Note)
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Task</label>
                        <div class="form-control bg-white">
                            @Html.DisplayFor(model => model.Task)
                        </div>
                    </div>
                    <!-- Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Progress_Id" class="btn btn-primary me-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-danger">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
