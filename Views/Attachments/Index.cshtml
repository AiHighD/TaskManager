@model PaginatedList<AttachmentViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index">
    <div class="d-flex">
        <input class="form-control" placeholder="Search..." value="@ViewData["CurrentFilter"]" type="text"
            autocomplete="off" name="SearchString" />
        <select name="taskId" class="form-select" asp-items="ViewBag.TaskId">
            <option value="">-- Select Task --</option>
        </select>
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr> 
            <th>
                @Html.DisplayNameFor(model => model[0].File)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Image)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DescriptionSortParm"]"
                     asp-route-currentFilter="@ViewData["CurrentFilter"]">               
                @Html.DisplayNameFor(model => model[0].Description)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]"
                     asp-route-currentFilter="@ViewData["CurrentFilter"]">
                @Html.DisplayNameFor(model => model[0].Time_Create_Tep)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.File))
                {
                        <a href="@item.File" download>
                        @if (item.File.EndsWith(".pdf"))
                        {
                                    <img src="../assets/images/icons/pdf-icon.png" width="50" />
                        }
                        else if (item.File.EndsWith(".doc") || item.File.EndsWith(".docx"))
                        {
                                    <img src="../assets/images/icons/docx-icon.png" width="50" />
                        }
                        else if (item.File.EndsWith(".xls") || item.File.EndsWith(".xlsx"))
                        {
                                    <img src="../assets/images/icons/xlsx-icon.png" width="50" />
                        }
                        else if (item.File.EndsWith(".txt") || item.File.EndsWith("."))
                        {
                                    <img src="../assets/images/icons/txt-icon.png" width="50" />
                        }
                        else
                        {
                                    <img src="../assets/images/icons/default-icon.png" width="50" />
                        }
                        </a>
                }
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Image))
                {
                        <img src="@item.Image" width="100" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time_Create_Tep)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Attachments_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Attachments_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Attachments_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-pageNumber="@(Model.PageIndex - 1)"
    asp-route-currentFilter="@ViewData["CurrentFilter"]" class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-pageNumber="@(Model.PageIndex + 1)"
    asp-route-currentFilter="@ViewData["CurrentFilter"]" class="btn btn-default @nextDisabled">
    Next
</a>
