@model TasksManager.ViewModels.TaskViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text my-2">Delete</h1>
<h4 class="text-center text-danger">Are you sure you want to delete this task?</h4>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this task?');"
                        class="">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Hidden field for Id -->
                        <input type="hidden" asp-for="Task_Id" />

                        <!-- Name -->
                        <div class="form-group mb-3">
                            <label asp-for="Task_Name" class="form-label fw-bold">Task Name</label>
                            <p class="form-control">@Html.DisplayFor(model => model.Task_Name)</p>
                        </div>

                        <!-- Topic -->
                        <div class="form-group mb-3">
                            <label asp-for="Topic" class="form-label fw-bold"></label>
                            <p class="form-control">@Html.DisplayFor(model => model.Topic)</p>
                        </div>

                        <!-- Description -->
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <p class="form-control">@Html.DisplayFor(model => model.Description)</p>
                        </div>

                        <!-- StartTime -->
                        <div class="form-group mb-3">
                            <label asp-for="StartTime" class="form-label fw-bold"></label>
                            <p class="form-control">@Html.DisplayFor(model => model.StartTime)</p>
                        </div>

                        <!-- EndTime -->
                        <div class="form-group mb-3">
                            <label asp-for="EndTime" class="form-label fw-bold"></label>
                            <p class="form-control">@Html.DisplayFor(model => model.EndTime)</p>
                        </div>

                        <!-- Status -->
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <p class="form-control">@Html.DisplayFor(model => model.Status)</p>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger btn-lg me-2">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-success btn-lg">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
