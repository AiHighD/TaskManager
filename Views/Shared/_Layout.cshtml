<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>@ViewData["Title"]</title>
  <script type="importmap"></script>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <!-- <link rel="stylesheet" href="~/TasksManager.styles.css" asp-append-version="true" /> -->
  <link rel="shortcut icon" type="image/png" href="/assets/images/logos/favicon.png" />
  <link rel="stylesheet" href="/assets/css/styles.min.css" />
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Sidebar Start -->
    <aside class="left-sidebar">
      <!-- Sidebar scroll-->
      <div>
        <div class="brand-logo d-flex align-items-center justify-content-between">
          <a class="sidebar-link" asp-area="" asp-controller="Home" asp-action="Index" aria-expanded="false"
            class="text-nowrap logo-img">
            <img src="/assets/images/logos/logo.svg" alt="" />
          </a>
          <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
            <i class="ti ti-x fs-8"></i>
          </div>
        </div>
        <!-- Sidebar navigation-->
        <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
          <ul id="sidebarnav">
            <li class="nav-small-cap">
              <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
              <span class="hide-menu">Task Manager</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-area="" asp-controller="Tasks" asp-action="Index" aria-expanded="false">
                <iconify-icon icon="solar:widget-add-line-duotone"></iconify-icon>
                <span class="hide-menu">Task</span>
              </a>
            </li>
            <li>
              <span class="sidebar-divider lg"></span>
            </li>
            <li class="nav-small-cap">
              <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
              <span class="hide-menu">Tài Liệu</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-area="" asp-controller="Attachments" asp-action="Index" aria-expanded="false">
                <iconify-icon icon="solar:text-field-focus-line-duotone"></iconify-icon>
                <span class="hide-menu">Attachments</span>
              </a>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-area="" asp-controller="Documents" asp-action="Index" aria-expanded="false">
                <iconify-icon icon="solar:file-text-line-duotone"></iconify-icon>
                <span class="hide-menu">Documents</span>
              </a>
            </li>
            <li>
              <span class="sidebar-divider lg"></span>
            </li>
            <li class="nav-small-cap">
              <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
              <span class="hide-menu">Tiến Độ</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-area="" asp-controller="Progress" asp-action="Index" aria-expanded="false">
                <iconify-icon icon="solar:danger-circle-line-duotone"></iconify-icon>
                <span class="hide-menu">Progress</span>
              </a>
            </li>
            <li class="nav-small-cap">
              <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
              <span class="hide-menu">AUTH</span>
            </li>

            <ul class="sidebar">
              @if (Context.Session.GetString("JWTToken") != null)
              {
                <!-- Khi người dùng đã đăng nhập -->
                <li class="sidebar-item">
                  <form class="sidebar-link" asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-link text-dark d-flex align-items-center">
                      <iconify-icon icon="solar:logout-line-duotone"></iconify-icon>
                      <span class="hide-menu">Logout</span>
                    </button>
                  </form>
                </li>
              }
              else
              {
                <!-- Khi người dùng chưa đăng nhập -->
                <li class="sidebar-item">
                  <a class="sidebar-link" href="/Account/Login" aria-expanded="false">
                    <iconify-icon icon="solar:login-3-line-duotone"></iconify-icon>
                    <span class="hide-menu">Login</span>
                  </a>
                </li>
                <li class="sidebar-item">
                  <a class="sidebar-link" href="/Account/Register" aria-expanded="false">
                    <iconify-icon icon="solar:user-plus-rounded-line-duotone"></iconify-icon>
                    <span class="hide-menu">Register</span>
                  </a>
                </li>
              }

            </ul>


            <li>
              <span class="sidebar-divider lg"></span>
            </li>
            <h2><a class="btn btn-primary" href="/swagger">Explore APIs</a></h2>
            <div>
            </div>
        </nav>
        <!-- End Sidebar navigation -->
      </div>
      <!-- End Sidebar scroll-->
    </aside>
    <!--  Sidebar End -->
    <!--  Main wrapper -->
    <div class="body-wrapper">
      <!--  Header Start -->
      <header class="app-header">
        <nav class="navbar navbar-expand-lg navbar-light">
          <ul class="navbar-nav">
            <li class="nav-item d-block d-xl-none">
              <a class="nav-link sidebartoggler " id="headerCollapse" href="javascript:void(0)">
                <i class="ti ti-menu-2"></i>
              </a>
            </li>
          </ul>
        </nav>
      </header>
      <!--  Header End -->
      <div class="body-wrapper-inner">
        <div class="container-fluid">
          <!--  Row 1 -->
          <div class="row">
            <div class="col-lg-12 d-flex align-items-strech">
              <div class="card w-100">
                <div class="card-body">
                  @RenderBody()
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>

  @await RenderSectionAsync("Scripts", required: false)
  <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/sidebarmenu.js"></script>
  <script src="/assets/js/app.min.js"></script>
  <script src="/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
  <script src="/assets/libs/simplebar/dist/simplebar.js"></script>
  <script src="/assets/js/dashboard.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>